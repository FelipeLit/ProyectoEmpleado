@{
    ViewData["Title"] = "Registro";
}

@model Employee;

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Back</a>
</div>


<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <h2 class="text-center mt-5">Registro</h2>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">

            <form asp-action="CreateEmployee" asp-controller="Employee" method="post">
                <div class="mt-3">
                    <label for="" class="form-label">Name</label>
                    <input type="text" id="" class="form-control" asp-for="Name">
                </div>
                @* Validacion 
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Name"></span>
                </div>*@

                <div class="mt-3">
                    <label for="" class="form-label">LastName</label>
                    <input type="text" id="" class="form-control" asp-for="LastName">
                </div>
       

                <div class="mt-3">
                    <label for="" class="form-label">Document</label>
                    <input type="text" id="" class="form-control" asp-for="Document">
                </div>
       

                <div class="mt-3">
                    <label for="" class="form-label">Email</label>
                    <input type="email" id="" class="form-control" asp-for="Email">
                </div>
        
                <div class="mt-3">
                    <label for="" class="form-label">Password</label>
                    <input type="password" id="" class="form-control" asp-for="Password">
                </div>
         

                <button class="btn btn-success w-100 mt-3">Crear cuenta</button>
            </form>
        </div>
    </div>


</div>